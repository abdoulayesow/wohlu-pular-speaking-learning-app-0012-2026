{
  "permissions": {
    "allow": [
      "Bash(pnpm add:*)",
      "Bash(touch:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm dev:*)",
      "Bash(mkdir:*)",
      "Skill(summary-generator)",
      "Skill(clean-code)",
      "WebSearch"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [{ "type": "command", "command": "node .claude/hooks/block-dangerous-commands.js" }]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [{ "type": "command", "command": "node .claude/hooks/lint-on-edit.js" }]
      }
    ]
  }
}
